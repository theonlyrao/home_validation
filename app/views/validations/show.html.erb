<div class="validation-show-page">
    <div class="row">
	<% if @validation.validated? %>
	    <div class="card card-inverse card-success text-center">	
		<div class="card-block page-title">
		    <h1 class="validated">Home Validated</h1>
		</div> <!-- page-title -->
	    </div> <!-- validated-card -->
	<% else %>
	    <div class="card card-inverse card-danger text-center">	
		<div class="card-block page-title">
		    <h1 class="not-validated">Home Not Valid</h1>
		</div> <!-- page-title -->
	    </div> <!-- not-valid-card -->
	<% end %>
    </div> <!-- row -->

    <div class="row">
	<div class="card card-inverse card-info col-md-12">
	    <div class="card-block">
		<p class="card-text">
		    We compared the gps metadata against the address provided. A home is validated only if the gps metadata indicates that the picture was taken within about 300 feet of the address.
		</p>
	    </div>
	</div>
    </div>

    
    <div class="row">
	<div class="content-box-container">
	    <div class="content-box featured-image col-md-3 col-md-offset-1">
		<p>Submitted Image</p>
		<%= image_tag @validation.pictures.first.picture.url(:medium) %>		
	    </div> <!-- featured-image -->
	    
	    <div class="content-box metadata col-md-3">
		<p>Photo Metadata Information</p>
		<ul>
		    <% @validation.pictures.each do |photo| %>
			<li>Photo Latitude: <%= photo.lat %></li>
			<li>Photo Longitude: <%= photo.long %></li>
		    <% end %>
		</ul>
	    </div> <!-- metadata -->
	    
	    <div class="content-box address-report col-md-3">
		<p>Address Information</p>
		<ul>
		    <li>Address: <%= @validation.home.address %></li>
		    <li>Calculated Latitude: <%= @validation.home.lat %></li>
		    <li>Calculated Longitude: <%= @validation.home.long %></li>
		</ul>
	    </div> <!-- address-report -->
	</div> <!-- content-box-container -->
    </div> <!-- row -->
</div> <!-- show-page -->
