<div class="validation-show-page">
    <div class="row">
	<h1 class="page-title text-md-center">
	    <% if @validation.validated? %>
		<div class="validated">Home Validated</div>
	    <% else %>
		<div class="not-validated">Home Not Valid</div>
	    <% end %>
	</h1>
    </div> <!-- row -->
    
    <div class="row">
	<div class="content-box-container">
	    <div class="content-box featured-image col-md-3 col-md-offset-1">
		<p>Submitted Image</p>
		<%= image_tag @validation.pictures.first.picture.url(:medium) %>		
	    </div> <!-- featured-image -->
	    
	    <div class="content-box metadata col-md-3">
		<p>Photo Metadata Information</p>
		<ul>
		    <% @validation.pictures.each do |photo| %>
			<li>Photo Latitude: <%= photo.lat %></li>
			<li>Photo Longitude: <%= photo.long %></li>
		    <% end %>
		</ul>
	    </div> <!-- metadata -->
	    
	    <div class="content-box address-report col-md-3">
		<p>Address Information</p>
		<ul>
		    <li>Address: <%= @validation.home.address %></li>
		    <li>Calculated Latitude: <%= @validation.home.lat %></li>
		    <li>Calculated Longitude: <%= @validation.home.long %></li>
		</ul>
	    </div> <!-- address-report -->
	</div> <!-- content-box-container -->
    </div> <!-- row -->
</div> <!-- show-page -->
